<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    tools:context="lightingstorm.io.simplescanner.CropActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="394dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView4" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="13dp"
        android:paddingBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp">

        <Button
            android:id="@+id/btn_back"
            android:elevation="0dp"
            android:background="@drawable/ic_arrow_back_white_36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_width="36dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/btn_roundleft"
            android:elevation="0dp"
            android:background="@drawable/ic_rotate_left_white_36dp"
            android:layout_centerVertical="true"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/btn_roundright"
            android:elevation="0dp"
            android:background="@drawable/ic_rotate_right_white_36dp"
            android:layout_centerVertical="true"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/btn_fill"
            android:elevation="0dp"
            android:background="@drawable/ic_fullscreen_white_36dp"
            android:layout_centerVertical="true"
            android:layout_height="36dp"
            android:layout_width="36dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/btn_complete"
            android:elevation="0dp"
            android:background="@drawable/ic_check_white_36dp"
            android:layout_width="36dp"
            android:layout_centerVertical="true"
            android:layout_weight="0.17"
            android:layout_height="36dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp" />

    </LinearLayout>
</RelativeLayout>
