<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_effect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lightingstorm.io.simplescanner.EffectActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#1ABC9C"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp">

        <Button
            android:layout_width="wrap_content"
            android:text="Original"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/ic_photo_white_36dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:layout_height="70dp"
            android:textSize="14sp"
            android:id="@+id/btn_original"
            android:onClick="btn_original_Click"
            />

        <Button
            android:layout_width="wrap_content"
            android:text="Gray Sacle"
            android:textColor="#1A1C27"
            android:drawableTop="@drawable/ic_filter_drama_black_36dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:layout_height="70dp"
            android:textSize="14sp"
            android:id="@+id/btn_grayscale"
            android:onClick="btn_grayscale_Click"
            />

        <Button

            android:layout_width="wrap_content"
            android:text="BnW"
            android:textColor="#1A1C27"
            android:drawableTop="@drawable/ic_tonality_black_36dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:layout_height="70dp"
            android:textSize="14sp"
            android:id="@+id/btn_blackwhite"
            android:onClick="btn_blackwhite_Click"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="80dp"
        android:background="#282B39"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_width="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <Button
            android:background="@drawable/ic_arrow_back_white_48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_back" />

        <Button
            android:background="@drawable/ic_rotate_left_white_48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_rotateleft" />

        <Button
            android:background="@drawable/ic_rotate_right_white_48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_rotateright" />

        <Button
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:text="A4"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_a4" />

        <Button
            android:background="@drawable/ic_check_white_48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/btn_checkmark" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_launcher" />

</RelativeLayout>
