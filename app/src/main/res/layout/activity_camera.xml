<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_camera"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="lightingstorm.io.simplescanner.CameraActivity">

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:background="@color/MidnightExpress"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="70dp">

            <Button
                android:layout_weight="0.4"
                android:background="@drawable/ic_arrow_back_white_48dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_back" />


            <Button
                android:layout_weight="0.4"
                android:background="@drawable/ic_photo_camera_white_48dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:id="@+id/btn_shot" />


            <Button
                android:layout_weight="0.4"
                android:background="@drawable/ic_check_white_48dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_checkmark" />

        </LinearLayout>

</RelativeLayout>
