<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pdfview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lightingstorm.io.simplescanner.PdfviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@color/MidnightExpress"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="5">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_left_white_48dp" />

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_left_white_48dp" />

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_right_white_48dp" />

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/a4"
            android:textColor="#FFFFFF"
            android:textSize="26dp" />

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_weight="1"
            android:background="@drawable/ic_check_white_48dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgv_pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/tuananh" />
    <!--<WebView-->
        <!--android:id="@+id/webview_pdfView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="70dp"-->
        <!--android:layout_marginTop="60dp"-->
        <!--android:background="@drawable/tuananh" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/LightSeaGreen"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_pdfViewBack"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_back_white_48dp" />
    </LinearLayout>


</RelativeLayout>
