<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/linearLayout3"
    tools:context="lightingstorm.io.simplescanner.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:background="@color/LightSeaGreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="3"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_height="60dp"
        android:id="@+id/linearLayout3">


        <EditText
            android:id="@+id/txt_search"
            android:layout_width="8dp"
            android:inputType="text|none"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="3.2"
            android:background="@android:color/transparent"
            android:text="Simple Scanner"/>

        <Button
            android:layout_width="40dp"
            android:drawableTop="@drawable/ic_search_white_24dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:id="@+id/btn_search"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            />

        <Button
            android:drawableTop="@drawable/ic_refresh_whitesmoke_36dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:id="@+id/btn_more"
            android:layout_marginTop="4dp"
            android:onClick="btn_more_CLick"
            android:layout_marginRight="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/LightSeaGreen"
            android:src="@drawable/ic_photo_camera_white_48dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:id="@+id/btn_take_photo"
            app:fabSize="normal"
            />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@android:color/white"
        android:src="@mipmap/ic_information_24"
        android:layout_gravity="bottom|left"
        android:layout_margin="@dimen/fab_margin"
        android:id="@+id/btn_about"
        android:onClick="btn_about_click"
        app:fabSize="normal"
        />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listpdf"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="80dp">

    </ListView>

</android.support.design.widget.CoordinatorLayout>