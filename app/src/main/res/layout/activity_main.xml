<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lightingstorm.io.simplescanner.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/LightSeaGreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="3"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_height="70dp">

        <EditText
            android:id="@+id/txt_search"
            android:layout_width="wrap_content"
            android:inputType="text|none"
            android:layout_height="fill_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="3.2" />

        <Button
            android:layout_width="60dp"
            android:drawableTop="@drawable/ic_search_white_48dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:id="@+id/btn_search"
            android:layout_height="fill_parent"
            android:layout_marginTop="4dp" />

        <Button
            android:layout_width="55dp"
            android:drawableTop="@drawable/ic_more_vert_white_48dp"
            android:background="@android:color/transparent"

            android:layout_gravity="center"
            android:id="@+id/btn_more"
            android:layout_height="fill_parent"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <Button
        android:layout_weight="1"
        android:background="@color/LightSeaGreen"
        android:drawableTop="@drawable/ic_photo_camera_white_48dp"
        android:layout_gravity="center"
        android:layout_marginRight="23dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/btn_take_photo"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/imageDefault"
        android:background="@drawable/ic_photo_size_select_actual_black_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
